
<main class="contenedor contenedor-formularios">
    <h1><%- nombrePagina %></h1>
    <form class="default-form" method="POST">
        <legend>Sobre el Meeti</legend>
        <div class="campo">
            <label>Grupo</label>
            <select name="grupoId">
                    <option value="" disabled selected>-- Selecciona Grupo --</option>
                    <% if(grupos.length > 0) { %> 
                     <% grupos.forEach(grupo=>{ %>
                      <option <%=(meetis.GrupoId===grupo.id)?'selected':'' %>  value="<%= grupo.id %>"> <%= grupo.nombre  %>  </option>
                     <% }) %>    
                    <% } %> 
            </select>
        </div>
        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" value="<%=meetis.titulo %>" >
        </div>
        <div class="campo">
            <label>Invitado</label>
            <input type="text" name="invitado" value="<%=meetis.invitado %>">
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Fecha</label>
                <input type="date" name="fecha" value="<%=meetis.fecha %>">
            </div>
            <div class="campo">
                <label>Hora</label>
                <input type="time" name="hora" value="<%=meetis.hora %>">
            </div>
        </div>
        <div class="campo">
            <label>Cupo</label>
            <input type="number" min="1" name="cupo" value="<%=meetis.cupo %>">
        </div>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value="<%=meetis.descripcion %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <legend>Ubicación Meeti</legend>
        <div class="campo buscador">
            <label>Coloca la Dirección del Meeti</label>
            <div class="contenedor-input">
                <input type="text" id="formbuscador" placeholder="Ubicación">
                <small>El asistente colocará una dirección estimada</small>
            </div>
        </div>
        <div id="editar-mapa" class="campo mapa">
            <div id="mapa"></div>
            <p class="informacion">Mueve el Pin hasta el punto exacto</p>
        </div>
        
        <p class="informacion">Confirma que los siguientes campos sean correctos:</p>

        <div class="campo">
            <label>Dirección</label>
            <input type="text" id="direccion" name="direccion" value="<%=meetis.direccion %>">
        </div>
        <div class="campo">
            <label>Ciudad</label>
            <input type="text" id="ciudad" name="ciudad" value="<%=meetis.ciudad %>">
        </div>
        <div class="campo">
            <label>Estado</label>
            <input type="text" id="estado" name="estado" value="<%=meetis.estado %>">
        </div>
        <div class="campo">
            <label>País</label>
            <input type="text" id="pais" name="pais" value="<%=meetis.pais %>">
        </div>
        <div class="campo">
            <label>Latitud</label>
            <input type="text" id="lat" name="lat" readonly="readonly" value="<%=meetis.ubicacion.coordinates[0] %>">
        </div>
        <div class="campo">
            <label>Longtitud</label>
            <input type="text" id="lng" name="lng" readonly="readonly" value="<%=meetis.ubicacion.coordinates[1] %>" >
        </div>
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Guardar Cambios">
        </div>        
    </form>
</main>