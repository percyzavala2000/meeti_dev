<main class="contenedor contenedor-formularios no-padding">
    <h1> <%= nombrePagina %> </h1>

    <form  method="POST" class="default-form" >
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" value="<%= grupo.nombre %>" placeholder="Nombre Grupo">
        </div>
        <div class="campo descripcion">
            <label for="descripcion">Descripcion</label>
            <div class="cantenedor-editor">
                <input type="hidden" id="x" value="<%= grupo.descripcion %>" name="descripcion">
                <trix-editor input="x"> </trix-editor>
            </div>
        </div>
        <div class="campo">
            <label for="categoria">Categoria</label>
            <select name="categoria" >
            <option value="" selected disabled>-- Elige una categoria --</option>
            <% categorias.forEach(categoria=>{ %>
                <option value="<%= categoria.id %>" <%=(grupo.CategoriumId===categoria.id)?'selected':'' %>  > <%= categoria.nombre %> </option>
           <% }) %>
           </select>

        </div>
        
        <div class="campo">
            <input type="url" name="url" value="<%= grupo.url %>" placeholder="Sitio web">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Editar Grupo">
        </div>
    </form>

</main>